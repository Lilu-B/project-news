{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for a given article",
    "queries": [],
    "exampleResponse": {
        "comments": [
            {
                "comment_id": 1,
                "votes": 0,
                "created_at": "2018-06-30T15:59:13.341Z",
                "author": "some_author",
                "body": "Some article!",
                "article_id": 1
            }
        ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment for the given article_id",
    "exampleRequestBody": {
      "username": "butter_bridge",
      "body": "Great article!"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "body": "Great article!",
        "article_id": 1,
        "author": "butter_bridge",
        "votes": 0,
        "created_at": "2020-10-10T10:10:10.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes for an article by its article_id.",
    "body": {
      "inc_votes": "number"
    },
    "responses": {
      "200": {
        "description": "Returns the updated article object.",
        "body": {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": "105"
        }
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes the given comment by comment_id.",
    "queries": [],
    "exampleRequest": {
      "comment_id": 1
    },
    "exampleResponse": null
  },
  "/api/users": {
    "GET": {
      "description": "Fetches an array of all users",
      "queries": [],
      "exampleResponse": {
        "users": [
          {
            "username": "butter_bridge",
            "name": "Jonny",
            "avatar_url": "https://www.avatars.com/butter_bridge"
          },
          {
            "username": "icellusedkars",
            "name": "Sam",
            "avatar_url": "https://www.avatars.com/icellusedkars"
          }
        ]
      }
    }
  }
}
